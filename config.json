{
  "paths": {
    "database": "sources/journal_entries.db",
    "schema": "sources/schema.xsd",
    "output": "sources/output.xml"
  },
  "processing": {
    "batch_size": 1000,
    "skip_validation": false,
    "max_description_length": 255
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "output": {
    "pretty_print": true,
    "validate_xml": true
  }
}